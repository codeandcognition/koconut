{
  "name": "koconut",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@storybook/addon-info": "^3.1.6",
    "@storybook/react": "^3.1.7",
    "babel-cli": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "react-scripts": "1.0.10"
  },
  "dependencies": {
    "documentation": "^4.0.0-rc.1",
    "flow-bin": "^0.49.1",
    "jsdoc": "^3.4.3",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.0.2",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "scripts": {
    "doc-serve": "documentation serve --watch src/**",
    "doc-build": "documentation build src/** -f html -o dev/docs",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm run build-css && react-scripts build && npm run doc-build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public -o dev/storybook",
    "start-docs": "npm-run-all -p doc-serve storybook",
    "start-all": "npm-run-all -p start start-docs",
    "build-docs": "npm-run-all -p doc-build build-storybook",
    "build-all": "npm-run-all -p build build-docs",
    "flow": "flow"
  }
}
